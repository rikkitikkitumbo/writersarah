            | Contact

      #sm-sarah-miller.row.ws-header-bg
        div style="margin-top: 5px; margin-bottom: 2px; "
          h1.ws-titlebar-font Sarah Miller


      #sm-title-bar.row.ws-header-bg style="margin-top: 21px;"
        div style="text-align: center; margin-top: 5px; margin-bottom: 2px;"
          h1.ws-titlebar-font  Sarah Miller
          h4 style="display: inline; color: grey; font-size: 17px;"<em> &nbsp - Professional Writer</em>

        ul ng-init="gettCats()"
          a.header-a ui-sref-active="active" ui-sref="app.about"
            | About
          a.header-a ng-repeat="cat in cats" ui-sref-active="active" ui-sref="app.show({ title: cat.title })"
            | {{cat.title}}
          a.header-a ui-sref-active="active" ui-sref="app.contact" style="border-right: 1px solid #999;"
